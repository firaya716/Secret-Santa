from aiogram import Bot, Dispatcher, types
from aiogram.utils import executor
from aiogram.types import ReplyKeyboardMarkup, KeyboardButton

bot = Bot(token='_')
dp = Dispatcher(bot)

button_save = KeyboardButton('Создать игру')
button_return = KeyboardButton('Мои игры')
keyboard1 = ReplyKeyboardMarkup(resize_keyboard=True).add(button_save, button_return)

@dp.message_handler(commands=['start'])
async def send_welcome(message: types.Message):
    await message.reply("Привет! Этот бот поможет вам организовать игру Тайный Санта».", reply_markup=keyboard1)

@dp.message_handler(lambda message: message.text == 'Создать игру')
async def handle_hi(message: types.Message):
    await message.reply("Введи название игры")

@dp.message_handler(lambda message: message.text == 'Тест')
async def handle_hi(message: types.Message):
    await message.reply("Как участники будут дарить подарки?")

@dp.message_handler(lambda message: message.text == 'Мои игры')
async def handle_hi(message: types.Message):
    await message.reply("Функциия на ремонте")

@dp.message_handler(lambda message: message.text.lower() == 'пока')
async def handle_bye(message: types.Message):
    await message.reply("До свидания!", reply_markup=types.ReplyKeyboardRemove())

if __name__ == '__main__':
    executor.start_polling(dp, skip_updates=True)
