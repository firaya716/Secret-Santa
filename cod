#Почта
@dp.message_handler(lambda message: message.text == 'Почта')
async def handle_hi(message: types.Message):
    await message.reply("Вы выбрали «Почтой или доставкой». Т.е. вы все находитесь в разных местах и будете отправлять подарки на домашний адрес. У всех игроков мы попросим ввести свой адрес.")

#Лично
@dp.message_handler(lambda message: message.text == 'Лично')
async def handle_hi(message: types.Message):
    await message.reply("Вы выбрали «Лично». Т.е. вы собирётесь в специально условленном месте и будете лично вручать подарки.")

#Мои игры
@dp.message_handler(lambda message: message.text == 'Мои игры')
async def handle_hi(message: types.Message):
    await message.reply("Функциия на ремонте")

#Пока
@dp.message_handler(lambda message: message.text.lower() == 'пока')
async def handle_bye(message: types.Message):
    await message.reply("До свидания!", reply_markup=types.ReplyKeyboardRemove())

if __name__ == '__main__':
    executor.start_polling(dp, skip_updates=True)

